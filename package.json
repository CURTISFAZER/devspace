{
  "name": "devspace",
  "version": "1.0.0-alpha.6",
  "main": "index.js",
  "dependencies": {
    "elemental": "0.5.6",
    "firebase": "^2.3.1",
    "moment": "^2.10.6",
    "octicons": "^3.1.0",
    "parse-link-header": "^0.4.1",
    "re-base": "^1.2.2",
    "react": "0.14.0",
    "react-addons-css-transition-group": "^0.14.3",
    "react-addons-update": "^0.14.6",
    "react-dom": "0.14.0",
    "react-mixin": "^2.0.2",
    "react-timer-mixin": "^0.13.3",
    "superagent": "^1.6.1"
  },
  "devDependencies": {
    "babel": "5.8.23",
    "babelify": "6.4.0",
    "browserify": "11.2.0",
    "electron-builder": "^2.6.0",
    "electron-debug": "^0.5.1",
    "electron-packager": "^5.1.1",
    "electron-prebuilt": "^0.35.1",
    "gulp": "3.9.0",
    "gulp-autoprefixer": "3.1.0",
    "gulp-less": "3.0.5",
    "gulp-notify": "2.2.0",
    "gulp-rename": "1.2.2",
    "gulp-uglify": "1.4.2",
    "gulp-util": "3.0.7",
    "vinyl-buffer": "^1.0.0",
    "vinyl-source-stream": "^1.1.0",
    "watchify": "^3.6.1"
  },
  "scripts": {
    "start": "electron .",

    "clean": "rm -rf ./dist",
    "clean:osx": "rm -rf ./dist/osx",
    "clean:win": "rm -rf ./dist/win",

    "pack": "npm run clean && npm run pack:osx && npm run pack:win",
    "pack:osx": "npm run clean:osx && electron-packager . DevSpace --out=dist/osx --platform=darwin --arch=x64  --version=0.35.1 --icon=assets/icon.icns --app-version=\"1.0.0-alpha.6\" --ignore=\"node_modules|scripts|styles|dist\"",
    "pack:win": "npm run clean:win && electron-packager . DevSpace --out=dist/win --platform=win32  --arch=ia32 --version=0.35.1 --icon=assets/icon.ico  --app-version=\"1.0.0-alpha.6\" --ignore=\"node_modules|scripts|styles|dist\"",

    "build": "npm run build:osx && npm run build:win",
    "build:osx": "npm run pack:osx && electron-builder \"dist/osx/DevSpace-darwin-x64/DevSpace.app\"   --platform=osx --out=\"dist/osx\" --config=builder.json",
    "build:win": "npm run pack:win && electron-builder \"dist/win/DevSpace-win32-ia32\" --platform=win --out=\"dist/win\" --config=builder.json"
  }
}
